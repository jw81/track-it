.container.d-flex.h-100.flex-column
  .flex-grow-1
    - @games.each do |game|
      .row.justify-content-center.mb-3
        .card{ style: 'width: 30rem;' }
          .card-header
            = link_to game.opponent.name, game
            %span.float-right
              = game.date_played
          .card-body
            %ul.list-group.list-group-flush
              - %w[points rebounds assists steals blocks].each do |stat|
                %li.list-group-item.d-flex.justify-content-between.align-items-center
                  = stat.capitalize
                  %span.badge.badge-primary.badge-pill
                    = game.send("#{stat}_total")
