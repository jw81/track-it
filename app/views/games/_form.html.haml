= form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@game.errors.count, "error")} prohibited this Game from being saved:"
      %ul
        - @game.errors.full_messages.each do |message|
          %li
            = message
  .field
    = f.label :opponent
    = f.collection_select(:opponent_id, Opponent.all, :id, :name)
  .field
    = f.label :location
    = f.collection_select(:location_id, Location.all, :id, :full_location)
  .field
    = f.label :notes
    = f.text_area :notes
  .field
    = f.label :result
    = f.select(:result, Game.results.keys.map {|result| [result.titleize, result]})
  .actions
    = f.submit 'Save'
