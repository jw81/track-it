= form_for @location do |f|
  - if @location.errors.any?
    #error_explanation
      %h2
        = "#{pluralize(@location.errors.count, "error")} prohibited this Location from being saved:"
      %ul
        - @location.errors.full_messages.each do |message|
          %li
            = message
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
